<div class="product-card">
  <a href="{{ product.url | within: collection }}" class="product-card__link">
    <div class="product-card__image-wrapper">
      <img src="{{ product.featured_image | img_url: '480x480' }}" alt="{{ product.featured_image.alt | escape }}" class="product-card__image" loading="lazy">
    </div>
    <div class="product-card__info">
      <div class="product-card__name">{{ product.title }}</div>
      <div class="product-card__price">
        {% if product.price < product.compare_at_price %}
          <span class="product-card__price--sale">{{ product.price | money }}</span>
          <s class="product-card__price--regular">{{ product.compare_at_price | money }}</s>
        {% else %}
          {{ product.price | money }}
        {% endif %}
      </div>
    </div>
  </a>
  <form action="/cart/add" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
    <button type="submit" class="btn btn--secondary btn--full-width">Add to Cart</button>
  </form>
</div> 