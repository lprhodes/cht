{% case media.media_type %}
  {% when 'image' %}
    <img src="{{ media | img_url: 'master' }}" alt="{{ media.alt | escape }}" loading="lazy">
  {% when 'external_video' %}
    {{ media | external_video_tag }}
  {% when 'video' %}
    {{ media | video_tag: controls: true }}
  {% when 'model' %}
    {{ media | model_viewer_tag }}
  {% else %}
    <p>Unsupported media type</p>
{% endcase %}
